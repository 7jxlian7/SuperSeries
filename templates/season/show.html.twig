{% extends 'base.html.twig'%}

{% block title %}Saisons de {{ serie.title }}
{% endblock %}
{% block main %}
<div class="container white mt-5">
    {% include 'series/_serie_card.html.twig' with {series: serie} %}

        <div class="row liste-saisons-header border-bottom border-secondary mt-5 pb-3 justify-content-between align-items-center">
            <h2 class="ps-0 w-auto">Saison {{ season.number }} de <a class="white text-decoration-none link-series" href="{{ path('series_show', {'id': serie.id}) }}">{{ serie.title }}</a> ({{ season.episodes|length }} épisodes)</h2>
            <a class="w-auto" href="{{ path("watch_season", {"id": season.id}) }}">
                {% if app.user %}
                    {% if is_season_watched == true %}
                        <i class="bi bi-eye-fill white  fs-2"></i>
                    {% else %}
                        <i class="bi bi-eye white  fs-2"></i>
                    {% endif %}
                {% else %}
                    <i class="bi bi-eye white  fs-2"></i>
                {% endif %}
            </a>
        </div>
        <div class="row my-5">
            <h3 class="liste-saisons-header mt-3 ms-3 ps-0">Liste des épisodes : </h3>
			{% for episodes in season.episodes %}
				<div class="col-lg-2 col-md-4 col-sm-6 col-12 text-center mt-3">
					<a class="btn btn-outline-light w-100" href="{{ path('episode_show', {'id': episodes.id}) }}">
						<p class="text-center m-0">Episode {{episodes.number}}</p>
					</a>
				</div>
			{% endfor %}
        </div>
           

</div>


{% endblock %}