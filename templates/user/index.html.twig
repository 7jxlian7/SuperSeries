{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block main %}
<div class="container">
    <h1 class="text-white my-3">Gestion utilisateurs</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th class="table-dark">ID</th>
                <th class="table-dark">Pseudo</th>
                <th class="table-dark">Email</th>
                <th class="table-dark">Mot de passe</th>
                <th class="table-dark">Date d'inscription</th>
                <th class="table-dark">Admin</th>
                <th class="table-dark">User ID</th>
                <th class="table-dark">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td class="table-dark">{{ user.id }}</td>
                <td class="table-dark">{{ user.name }}</td>
                <td class="table-dark">{{ user.email }}</td>
                <td class="table-dark">{{ user.password }}</td>
                <td class="table-dark">{{ user.registerDate ? user.registerDate|date('Y-m-d H:i:s') : '' }}</td>
                <td class="table-dark">{{ user.admin ? 'Yes' : 'No' }}</td>
                <td class="table-dark">{{ user.userId }}</td>
                <td class="table-dark">
                    {% if app.user.id != user.id %}
                        <a class="text-white text-decoration-none link-series"
                            href="{{ path('user_delete', {'id': user.id}) }}"><i class="bi bi-trash-fill"></i>
                        </a>
                    {% endif %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8">Aucun utilisateur dans la base.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}